                                      AnchorPane.rightAnchor="10.0">
                                    <children>
                                        <Button mnemonicParsing="false" onAction="#onNuevoAction" text="Nuevo"/>
                                        <Button mnemonicParsing="false" onAction="#onEditarAction" text="Editar"/>
